  "license": "MIT",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "tsc",
    "start": "node dist/index.js",
    "watch": "tsc -w",
    "dev": "yarn clean && yarn build && concurrently \"yarn watch\" \"nodemon src/index.ts\"",
    "typeorm-cli": "ts-node -r tsconfig-paths/register node_modules/typeorm/cli.js",
    "migration:generate": "yarn typeorm-cli migration:generate",
    "migration:run": "yarn typeorm-cli migration:run"
  },
  "dependencies": {
    "class-transformer": "^0.5.1",
    "concurrently": "^9.2.0",
    "fastify": "^5.4.0",
    "nodemon": "^3.1.10",
    "pg": "^8.16.3",
    "pino": "^9.7.0",
    "prettier": "^3.6.2",
    "reflect-metadata": "^0.2.2",
    "typedi": "^0.10.0",
    "typeorm": "^0.3.25",
    "ulid": "^3.0.1",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@types/node": "^24.0.15",
    "pino-pretty": "^13.0.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  }
}
